bindsym $mod+Shift+at move workspace 2
bindsym $mod+Shift+numbersign move workspace 3
bindsym $mod+Shift+dollar move workspace 4
bindsym $mod+Shift+percent move workspace 5
bindsym $mod+Shift+asciicircum move workspace 6
bindsym $mod+Shift+ampersand move workspace 7
bindsym $mod+Shift+asterisk move workspace 8
bindsym $mod+Shift+parenleft move workspace 9
bindsym $mod+Shift+parenright move workspace 10

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "lxde-logout"

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode
	# They resize the border in the direction you pressed, e.g.
	# when pressing left, the window is resized so that it has
	# more space on its left
	
	bindsym h resize shrink left 1 px or 1 ppt
	bindsym Shift+H resize grow   left 1 px or 1 ppt
	
	bindsym j resize shrink down 1 px or 1 ppt
	bindsym Shift+J resize grow   down 1 px or 1 ppt
	
	bindsym k resize shrink up 1 px or 1 ppt
	bindsym Shift+K resize grow   up 1 px or 1 ppt
	
	bindsym l resize shrink right 1 px or 1 ppt
	bindsym Shift+L resize grow   right 1 px or 1 ppt
	
	#same bindings, but for the arrow keys
	bindsym Left resize shrink left 10 px or 10 ppt
	bindsym Shift+Left resize grow left 10 px or 10 ppt
	
	bindsym Down resize shrink down 10 px or 10 ppt
	bindsym Shift+Down resize grow down 10 px or 10 ppt
	
	bindsym Up resize shrink up 10 px or 10 ppt
	bindsym Shift+Up resize grow up 10 px or 10 ppt
	
	bindsym Right resize shrink right 10 px or 10 ppt
	bindsym Shift+Right resize grow right 10 px or 10 ppt
	
	#back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status
	position bottom
	#tray_output none
	#output DFP2
	colors {
		background $back-inact
		statusline $text
		                   #border #back       #text
		focused_workspace  $border $background $text
		active_workspace   $border $background $text
		inactive_workspace $bor-in $back-inact $t-in
		urgent_workspace   $bor-ur $back-urgen $t-ur
	}
}

##Use dmenu to play whatever is in xsel with mpv, store output in a log
bindsym $mod+m exec "mpv `xsel -o | dmenu -p 'Play with mvp: ' -b` > ~/.i3mpvlog"
##Dcalculator!
bindsym $mod+c exec "xsel -o | dmenu -b -p 'Calculate:' | python $HOME/.i3/pycalc.py | dmenu -b -p 'Answer:' | xsel -i"
##Volume controls
bindsym $mod+u exec "amixer sset Master `echo '3' | dmenu -b -p 'Raise volume:'`%+"
bindsym $mod+i exec "amixer sset Master `echo '3' | dmenu -b -p 'Lower volume:'`%-"
bindsym $mod+y exec "amixer sset Master toggle"
##Open vim
bindsym $mod+o exec "~/.i3/vimlaunch.sh"
##MPD Controls
mode "mpd" {
	bindsym l exec "mpc load `mpc lsplaylist | dmenu -b -p 'Load playlist:'`"
	bindsym a exec "mpc add `mpc listall | dmenu -b -p 'Add song to current playlist:'`"
	bindsym p exec "mpc play"
	bindsym n exec "mpc next"
	bindsym r exec "mpc rm `mpc lsplaylist | dmenu -b -p 'Delete playlist:'`"
	bindsym s exec "mpc save `dmenu -b -p 'Save playlist as:'`"
	bindsym e exec "mpc pause"
	bindsym y exec "mpc toggle"
	bindsym d exec "mpc del 0"
	bindsym u exec "mpc volume +`echo '3' | dmenu -b -p 'Raise mpd volume by:'`"
	bindsym i exec "mpc volume -`echo '3' | dmenu -b -p 'Lower mpd volume by:'`"
	bindsym Shift+I exec "mpc volume `dmenu -b -p 'Set mpd volume to:'`"
	bindsym v exec "mpc version | dmenu -b"
	bindsym t exec "mpc stats | dmenu -b" 
	bindsym c exec "mpc | dmenu -b"
	bindsym Shift+C exec "mpc clear"
	bindsym Shift+s exec "mpc shuffle"
	bindsym Shift+r exec "mpc repeat"
	bindsym Shift+A exec "mpc random"
	bindsym Shift+p exec "mpc prev"
	bindsym Shift+U exec "mpc update"
	
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

bindsym $mod+Shift+M mode "mpd"

