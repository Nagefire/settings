#pkill all ii, clear ~/irc/, start autorun ii's
exec_always "pkill ii > ~/.i3iilog"
exec_always "rm -rf ~/.i3/tempirc/*"
exec_always "rm -rf ~/irc/*"
exec_always "~/.i3/autoii.sh"

#Mode for irc things
mode "irc" {
	#List servers you're connected to
	bindsym l exec "ls ~/irc/ | dmenu -b -p 'Servers connected to: '"
	#List channels from a specific server
	bindsym c exec "ls ~/irc/$(ls ~/irc/ | dmenu -b -p 'List channels from:')"
	#Send a message to a server
	bindsym s exec "echo `xsel -o | dmenu -p 'Server message:' -b` >> ~/irc/$(ls ~/irc/ | dmenu -b -p 'Send message to:')/in"
	#Send a message to a channel
	bindsym m exec "~/.i3/chanmesg.sh"
	#Script for advanced reading of recent irc messages from Channel
	bindsym r exec "~/.i3/channelread.sh"
	#Script for advanced reading of recent server messages
	bindsym Shift+R exec "~/.i3/serverread.sh"
	#Connect to a server
	bindsym Shift+c exec "ii -s `dmenu -b -p 'Connect to:'`"
	#Read persistent channel messages
	bindsym p exec "~/.i3/perschan.sh"
	#Read persistent server messages
	bindsym Shift+p exec "~/.i3/persserv.sh"
	#dump logs
	bindsym d exec "mkdir -p ~/.i3irclogs; cp ~/.i3/tempirc/* ~/.i3irclogs/ -rf"
	#Get notifications of where the new messages are :D
	bindsym n exec "~/.i3/notify.sh"
	#Linkopener
	bindsym Shift+L exec "~/.i3/linkopen.py"
	#Start a message with the nick of someone in the channel
	bindsym Shift+N exec "~/.i3/nickmsg.sh"
	#Fix that recent messages being empty but there be notifications for channels
	bindsym f exec "~/.i3/channelfix.sh"
	#Server fix
	bindsym Shift+F exec "~/.i3/serverfix.sh"
	
	#Exit this madness
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

bindsym $mod+p mode "irc"

#Open any links in xsel -i
bindsym $mod+Shift+p exec "~/.i3/linkopen.py"
