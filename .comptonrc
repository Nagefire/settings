backend = "glx";
paint-on-overlay = true;
glx-no-stencil = true;
glx-no-rebind-pixmap = true;
vsync = "opengl-swc";

shadow = true;
no-dock-shadow = true;
no-dnd-shadow = true;
clear-shadow = true;
shadow-radius = 7;
shadow-offset-x = -7;
shadow-offset-y = -7;


menu-opacity = 0.7;
detect-client-opacity = true;

frame-opacity = 0.8;
#inactive-opacity = 0.7;
#inactive-opacity-override = false;

fading = true;
fade-delta = 4;
fade-in-step = 0.03;
fade-out-step = 0.03;
no-fading-openclose = false;

opacity-rule = [ 
	"85:class_g *= 'URxvt'",
	"85:class_g *= 'Steam'",
	"85:class_g *= 'i3bar'"
];

wintypes: {
	tooltip = { opacity = 0.8 };
}
