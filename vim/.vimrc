set tabstop=4

set shiftwidth=4

set smarttab

set showcmd

set ruler

set autoindent

imap <M-Space> <Esc>

" Default mapping
let g:multi_cursor_use_default_mapping=0
let g:multi_cursor_start_key='<C-l>'
let g:multi_cursor_next_key='<C-l>'
let g:multi_cursor_prev_key='<C-p>'
let g:multi_cursor_skip_key='<C-x>'
let g:multi_cursor_quit_key='<Esc>'
